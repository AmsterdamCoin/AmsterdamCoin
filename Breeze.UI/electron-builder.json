{
   "appId":"com.stratisplatform.breeze",
   "productName":"Breeze Wallet",
   "directories":{
      "app":"dist",
      "output":"app-builds",
      "buildResources":"dist/assets/images"
   },
   "win":{
      "icon":"dist/assets/images/icon",
      "target":[
         "nsis"
      ],
      "artifactName":"${productName}_v${version}_${os}${env.arch}_setup.${ext}"
   },
   "linux":{
      "target":[
         "deb",
         "tar.gz"
      ],
      "synopsis":"Breeze Wallet: Stratis' dual-currency full block light wallet with a strong focus on privacy.",
      "category":"Utility",
      "icon":"dist/assets/images/icons",
      "artifactName":"${productName}_v${version}-${os}_${arch}.${ext}"
   },
   "mac":{
      "target":[
         "dmg"
      ],
      "category":"public.app-category.productivity",
      "artifactName":"${productName}_v${version}_${os}${arch}.${ext}"
   },
   "nsis":{
      "oneClick":false,
      "perMachine":true,
      "allowToChangeInstallationDirectory":true,
      "deleteAppDataOnUninstall":true,
      "guid":"ed20df62-ff5a-4b83-a5e3-a361357c6e51",
      "createDesktopShortcut":true,
      "createStartMenuShortcut":true
   },
   "msi":{
      "warningsAsErrors":false
   },
   "extraResources":[
      "daemon/**/*"
   ]
}
